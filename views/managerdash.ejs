<!DOCTYPE html>
<html lang="en">

<head>
    <title>admin/managerdash</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
        }

        .sticky {
            position: sticky;
            top: 0;
            background-color: #333;
            overflow: hidden;
        }

        .sticky a {
            float: left;
            display: block;
            color: white;
            text-align: center;
            padding: 14px 25px;
            text-decoration: none;
        }

        .sticky a:hover {
            background-color: #111;
        }

        table {
            border-collapse: collapse;
            border-spacing: 0;
            width: 100%;
            border: 1px solid #ddd;
            margin-top: 40px;
            background-color: white;
        }

        th, td {
            text-align: center;
            padding: 16px;
        }

        th {
            background-color: #333;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>

    <div class="sticky">
        <a href="/manager">Add Manager</a>
        <a href="/datas">go back</a>
    </div>
<table>
        <tr align="center">
            <th>SI NO</th>
            <th>Name</th>
            <th>Email</th>
            <th>Action</th>
            <th>Status</th>
        </tr>

        <%i=1%>
        <%data.reverse().forEach(function(manager) { %>
        
        <tr align="center">
            <td><%=i++%></td>
            <td><%=manager.name %></td>
            <td><%= manager.id %></td>
            <td>
                <a href="/approve_manager/<%=manager._id%>" class="btn btn-success">Approve</a>
                /
                <a href="/reject_manager/<%=manager._id%>" onclick="return confirm('Are you sure you want to Reject?')"
                    class="btn btn-danger">Reject</a>
            </td>
            <td>
                <div class="text-danger"><b><% if(manager.status===0){ %>Rejected<% } %></b></div>
                <div class="text-success"><b><% if(manager.status===1){ %>Accepted<% } %></b></div>
            </td>
        </tr>
      
        <% }) %>
    </table><br>
</body>

</html>
