<!DOCTYPE html>
<html lang="en">
<head>
  <title>Admin</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      margin: 0;
      padding: 0;
    }

    .sticky {
      position: sticky;
      top: 0;
      background-color: #333; 
      overflow: hidden;
    }

    .sticky a {
      float: left;
      display: block;
      color: white;
      text-align: center;
      padding: 14px 25px;
      text-decoration: none;
    }

    .sticky a:hover {
      background-color: #111;
    }

    table {
      border-collapse: collapse;
      border-spacing: 0;
      width: 100%;
      border: 1px solid #ddd;
      margin-top: 40px;
    }

    th, td {
      text-align:center;
      padding: 16px;
    }

    tr:nth-child(even) {
      background-color: #bcb4b4;
    }
  </style>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>

  <div class="sticky">
    <a href="/addtopic">Add Topic</a>
    <a href="/managerdash">Manager</a>
    <a href="/logout">Logout</a>
  </div>

  <br>

  <table>
    <tr align="center">
      <th>SI NO</th>
      <th>Name</th>
      <th>Email</th>
      <th>Action</th>
      <th>Status</th>
    </tr>
    
    <%i=1%>
    <% data.reverse().forEach(function(person) { %>
      <% if(person.position=='Basic'){ %>
        <tr align="center">
          <td><%=i++%></td>
          <td><%= person.name %></td>
          <td><%= person.id %></td>
          <td>
           <a href="/approve/<%=person._id%>">Approve</a>
            /
            <a href="/reject/<%=person._id%>" onclick="return confirm('Are you sure you want to Reject?')">Reject</a>
            / 
            <a href="/viewprofiles/<%=person._id%>">View profile</a>
          </td>
          <td>
            <div class="text-danger"><% if(person.status===0){ %>Rejected<% } %></div>
            <div class="text-success"><% if(person.status===1){ %>Accepted<% } %></div>
          </td>
        </tr>
      <% } %>
    <% }) %>
  </table><br>
</body>
</html>
